{
  "name": "@form8ion/dependabot-scaffolder",
  "description": "opinionated scaffolder for enabling dependabot on a project",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "form8ion/dependabot-scaffolder",
  "bugs": "https://github.com/form8ion/dependabot-scaffolder/issues",
  "homepage": "https://npm.im/@form8ion/dependabot-scaffolder",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "sideEffects": false,
  "scripts": {
    "pretest": "run-s build",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "pregenerate:md": "npm run build",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "lint:sensitive": "ban",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any mocha 'src/**/*-test.js'",
    "lint:peer": "npm ls >/dev/null",
    "prepare": "husky install",
    "lint:gherkin": "gherkin-lint",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "test:integration:base": "NODE_OPTIONS=--enable-source-maps DEBUG=any cucumber-js test/integration --profile base",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:wip:debug": "DEBUG=test run-s 'test:integration:wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "lint:publish": "publint --strict"
  },
  "files": [
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@form8ion/core": "^4.0.0",
    "@travi/cli-messages": "^1.0.2"
  },
  "devDependencies": {
    "@babel/register": "7.23.7",
    "@cucumber/cucumber": "10.3.1",
    "@form8ion/babel-preset": "1.6.122",
    "@form8ion/commitlint-config": "1.0.70",
    "@form8ion/eslint-config": "7.0.8",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/eslint-config-mocha": "3.0.1",
    "@form8ion/remark-lint-preset": "6.0.2",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@travi/any": "3.1.0",
    "ban-sensitive-files": "1.10.1",
    "c8": "9.1.0",
    "chai": "4.4.1",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.4",
    "husky": "9.0.11",
    "lockfile-lint": "4.13.1",
    "mocha": "10.3.0",
    "mock-fs": "5.2.0",
    "npm-run-all2": "6.1.2",
    "publint": "0.2.7",
    "remark-cli": "12.0.0",
    "remark-toc": "9.0.0",
    "remark-usage": "11.0.1",
    "rimraf": "5.0.5",
    "rollup": "4.11.0",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "17.0.1"
  }
}
